{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",
  
    "compilerOptions": {
      "rootDir": "src",
      "lib": ["ES2021"],
      "module": "commonjs",
      "target": "ES2021",

      "outDir": "dist",
  
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
    },
    "include": ["src/**/*", "algos.ts", "tests"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
