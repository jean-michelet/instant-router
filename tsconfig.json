{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 18",
  
    "compilerOptions": {
      "rootDir": "src",
      "declaration": true,
      "lib": ["ES2020"],
      "module": "CommonJS",
      "target": "ES2020",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
    },
    "include": ["src/**/*", "algos.ts", "tests"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
